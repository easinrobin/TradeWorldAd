@model TW.Models.AdminViewModel
@{
    ViewBag.Title = "UpdateProject";
}


<style>
    option {
        background-color: #6f6f6f;
    }
</style>

<nav aria-label="breadcrumb" role="navigation">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="~/Home/Index">Home</a></li>
        <li class="breadcrumb-item"><a href="~/Projects/Index">Projects</a></li>
        <li class="breadcrumb-item active" aria-current="page">Update Project</li>
    </ol>
</nav>

<header class="content__title">
    <h1>Property</h1>
    <div class="actions">
        <a href="~/Projects/Index" class="actions__item zmdi zmdi-view-list zmdi-hc-fw" title="Back to List"></a>
        <a href="~/Projects/UpdateProject/@Model.Project.Id" class="actions__item zmdi zmdi-refresh zmdi-hc-fw" title="Refresh"></a>
    </div>
</header>

<div class="card">
    <div class="card-body">
        @using (Html.BeginForm("UpdateProject", "Projects", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.HiddenFor(model => model.Project.Id)
            @Html.HiddenFor(model => model.ProjectCategory.Id)
            <div class="form-horizontal">
                <div class="form-group">
                    @Html.LabelFor(model => model.Project.ProjectName, new { @class = "card-body__title" })
                    @Html.TextBoxFor(model => model.Project.ProjectName, new { @class = "form-control", placeHolder = "Property Name" })
                    @Html.ValidationMessageFor(model => model.Project.ProjectName, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Project.ProjectLocation, new { @class = "card-body__title" })
                    @Html.TextBoxFor(model => model.Project.ProjectLocation, new { @class = "form-control", placeHolder = "Property Name" })
                    @Html.ValidationMessageFor(model => model.Project.ProjectLocation, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Project.ArchitectName, new { @class = "card-body__title" })
                    @Html.TextBoxFor(model => model.Project.ArchitectName, new { @class = "form-control", placeHolder = "Property Name" })
                    @Html.ValidationMessageFor(model => model.Project.ArchitectName, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Project.Consultant_Contractor, new { @class = "card-body__title" })
                    @Html.TextBoxFor(model => model.Project.Consultant_Contractor, new { @class = "form-control", placeHolder = "Property Name" })
                    @Html.ValidationMessageFor(model => model.Project.Consultant_Contractor, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Project.ImageUrl, new { @class = "card-body__title" })
                    <div class="card">
                        <div class="card-body">
                            <span class="control-label col-md-2">Upload Images:</span>
                            <div class="col-md-10">
                                @*<input type="file" name="files" id="files" />*@
                                @Html.TextBoxFor(model => model.File, new { type = "file", id = "file" })
                                @Html.ValidationMessageFor(model => model.File, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label class="card-body__title">Vendor Names</label>
                    @Html.DropDownListFor(model => model.ProjectCategory.Name, ViewBag.CategoryList as SelectList, "Category Names", new { @class = "form-control ddlbg" })
                    @Html.ValidationMessageFor(model => model.ProjectCategory.Name, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-success" />
                </div>
            </div>
        }
    </div>
</div>