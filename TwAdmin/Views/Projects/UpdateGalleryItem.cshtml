@model TW.Models.AdminViewModel
@{
    ViewBag.Title = "Client Banner";
}

<nav aria-label="breadcrumb" role="navigation">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="~/Home/Index">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">About</li>
    </ol>
</nav>

<header class="content__title">
    <h1>Clients Banner</h1>
    <div class="actions">
        <a href="~/Home/UpdateGalleryItem" class="actions__item zmdi zmdi-refresh zmdi-hc-fw" title="Refresh"></a>
    </div>
</header>

<div class="card new-contact">
    @using (Html.BeginForm("UpdateProjectG", "Projects", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.HiddenFor(model => model.ProjectGallery.Id)
        @Html.HiddenFor(model => model.ProjectGallery.ImageUrl)
        @Html.HiddenFor(model => model.ProjectGallery.ProjectId)
        //var imagepath = "http://ss.byteheart.com/" + Model.Banner.ImageUrl;
        <div class="new-contact__header">

            @*@Html.TextBoxFor(model => model.Files, new { type = "file", id = "files", @class = "fa fa-camera new-contact__upload" })*@
            @*<input type="file" name="file" id="files" class="zmdi zmdi-camera new-contact__upload" />*@

            <img src="@Model.ProjectGallery.ImageUrl" class="new-contact__img" alt="">
        </div>

        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label>Image Details</label>
                        @Html.TextBoxFor(model => model.ProjectGallery.ImageDetails, new { @class = "form-control", placeholder = "Give Image Details" })
                        @Html.ValidationMessageFor(model => model.ProjectGallery.ImageDetails, "", new { @class = "text-danger" })

                    </div>
                </div>
            </div>

            <div class="clearfix"></div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @if (Model == null)
                    {
                        <input type="submit" value="Create" class="btn btn-light" />
                    }
                    else
                    {
                        <input type="submit" value="Update" class="btn btn-light" />
                    }

                </div>
            </div>
        </div>
    }
</div>