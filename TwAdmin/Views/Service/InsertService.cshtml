@using Vereyon.Web
@model TW.Models.AdminViewModel
@{
    ViewBag.Title = "InsertService";
}


<nav aria-label="breadcrumb" role="navigation">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="~/Home/Index">Home</a></li>
        <li class="breadcrumb-item"><a href="~/Service/Services">Service List</a></li>
        <li class="breadcrumb-item active" aria-current="page">Service</li>

    </ol>
</nav>

<header class="content__title">
    <h1>Service</h1>
    <div class="actions">
        <a href="~/Home/InsertClient" class="actions__item zmdi zmdi-refresh zmdi-hc-fw" title="Refresh"></a>
    </div>
</header>

<div class="card new-contact">
    @using (Html.BeginForm("InsertService", "Service", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.RenderFlashMessages()
        @Html.HiddenFor(model => model.Service.Id)
        @Html.HiddenFor(model => model.Service.ImageUrl)
        //var imagepath = "http://ss.byteheart.com/" + Model.Banner.ImageUrl;
        <div class="new-contact__header">

            @*@Html.TextBoxFor(model => model.Files, new { type = "file", id = "files", @class = "fa fa-camera new-contact__upload" })*@
            <input type="file" name="file" id="files" class="zmdi zmdi-camera new-contact__upload" />

            <img src="@Model.Service.ImageUrl" class="new-contact__img" alt="">
        </div>

        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label>Title</label>
                        @Html.TextBoxFor(model => model.Service.ServiceName, new { @class = "form-control", placeholder = "Give a Title" })
                        @Html.ValidationMessageFor(model => model.Service.ServiceName, "", new { @class = "text-danger" })

                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Service.Description, new { @class = "card-body__title" })
                        @*@Html.TextAreaFor(model => model.Property.Description, new { @class = "form-control", rows = "3", placeHolder = "Description" })*@
                        <section id="editor" class="rich-text-box">
                            @Html.TextAreaFor(model => model.Service.Description, new { @id = "wysiwyg-editor", placeHolder = "Description" })
                            @Html.ValidationMessageFor(model => model.Service.Description, "", new { @class = "text-danger" })
                        </section>

                    </div>
                </div>
            </div>

            <div class="clearfix"></div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @if (Model == null)
                    {
                        <input type="submit" value="Create" class="btn btn-light" />
                    }
                    else
                    {
                        <input type="submit" value="Update" class="btn btn-light" />
                    }

                </div>
            </div>
        </div>
    }
</div>