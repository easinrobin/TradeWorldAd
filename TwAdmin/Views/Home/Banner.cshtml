@model List<TW.Models.Banner>
@{
    ViewBag.Title = "Banner";
}


<header class="content__title">
    <h1>Testimonial</h1>
    <div class="actions">
        <a href="~/Home/InsertBanner" class="actions__item zmdi zmdi-plus zmdi-hc-fw" title="Create"></a>
        <a href="~/Home/Banner" class="actions__item zmdi zmdi-refresh zmdi-hc-fw" title="Refresh"></a>
    </div>
</header>

<div class="card">
    <div class="card-body">
        <a href="~/Home/InsertBanner" class="btn btn-light btn--icon-text" title="Create"><i class="zmdi  zmdi-plus-circle-o zmdi-hc-fw"></i> Create New</a>

        <div class="table-responsive">
            <table id="data-table" class="table">
                <thead style="color: #ffaa00">
                    <tr>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Image</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Title</td>
                            <td>@item.ShortDescription</td>
                            <td>
                                <img src="@item.ImageUrl" width="100" height="100" />
                            </td>
                            <td>
                                @Html.ActionLink(" ", "UpdateBanner", new { Id = item.Id }, new { @class = "zmdi zmdi-edit" })&nbsp;&nbsp;
                                @Html.ActionLink(" ", "DeleteBanner", new { Id = item.Id }, new { @class = "zmdi zmdi-delete", @id = "sa-question" })
                                <button id="sa-question">click</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@*, onclick = "return confirm('Are you sure you want to delete this item?')"*@ 

