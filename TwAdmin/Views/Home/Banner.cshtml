@model List<TW.Models.Banner>
@{
    ViewBag.Title = "Banner";
}


<header class="content__title">
    <h1>Banners</h1>
    <div class="actions">
        <a href="~/Home/InsertBanner" class="actions__item zmdi zmdi-plus zmdi-hc-fw" title="Create"></a>
        <a href="~/Home/Banner" class="actions__item zmdi zmdi-refresh zmdi-hc-fw" title="Refresh"></a>
    </div>
</header>

<div class="card">
    <div class="card-body">
        <a href="~/Home/InsertBanner" class="btn btn-light btn--icon-text" title="Create"><i class="zmdi  zmdi-plus-circle-o zmdi-hc-fw"></i> Create New</a>

        <div class="table-responsive">
            <table id="data-table" class="table">
                <thead style="color: #ffaa00">
                    <tr>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Image</th>
                        <th>Slider Image</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.Raw(@item.Title)</td>
                            <td>@item.ShortDescription</td>
                            <td>
                                <img src="@item.ImageUrl" width="100" height="100" />
                            </td>
                            <td>
                                <img src="@item.SliderBgImgUrl" width="100" height="100" />
                            </td>
                            <td>
                                @Html.ActionLink(" ", "UpdateBanner", new { Id = item.Id }, new { @class = "zmdi zmdi-edit", title = "Edit Item", data_toggle = "tooltip", data_placement = "top" })&nbsp;&nbsp;
                                @Html.ActionLink(" ", "DeleteBanner", new { Id = item.Id }, new { @class = "zmdi zmdi-delete", title = "Delete Item", data_toggle = "tooltip", data_placement = "top", onclick = "return confirm('Are you sure you want to delete this item?')" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
