@using Vereyon.Web
@model TW.Models.AdminViewModel
@{
    ViewBag.Title = "InsertBanner";

}


<nav aria-label="breadcrumb" role="navigation">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="~/Home/Index">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Banner</li>

    </ol>
</nav>

<header class="content__title">
    <h1>Banner</h1>
    <div class="actions">
        <a href="~/Home/InsertBanner" class="actions__item zmdi zmdi-refresh zmdi-hc-fw" title="Refresh"></a>
    </div>
</header>

<div class="card new-contact">
    @using (Html.BeginForm("InsertBanner", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.HiddenFor(model => model.Banner.Id)
        @Html.HiddenFor(model => model.Banner.ImageUrl)
        @Html.HiddenFor(model => model.Banner.SliderBgImgUrl)
        //var imagepath = "http://ss.byteheart.com/" + Model.Banner.ImageUrl;
        <div class="new-contact__header">

            @*@Html.TextBoxFor(model => model.File, new { type = "file", id = "files", @class = "zmdi zmdi-camera new-contact__upload" })*@
            @*@Html.ValidationMessageFor(model => model.File, "", new{ @class = "text-danger" })*@
            <input type="file" name="file" id="files" class="zmdi zmdi-camera new-contact__upload" />

            <img src="@Model.Banner.ImageUrl" class="new-contact__img" alt="">
        </div>

        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label>Title</label>&nbsp;&nbsp;<span style="font-size: 18px; color: #1AD69C"><i class="zmdi zmdi-help-outline" title="Use <span class=&quot;colored&quot;> </span> for text coloring" data-toggle="tooltip" data-placement="top"></i></span>
                        @Html.TextBoxFor(model => model.Banner.Title, new { @class = "form-control", placeholder = "Give a Title" })
                        @Html.ValidationMessageFor(model => model.Banner.Title, "", new { @class = "text-danger" })

                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group">
                        <label>Short Description</label>
                        @Html.TextBoxFor(model => model.Banner.ShortDescription, new { @class = "form-control", placeholder = "Write a short description" })
                        @Html.ValidationMessageFor(model => model.Banner.ShortDescription, "", new { @class = "text-danger" })
                    </div>
                </div>
                
                <div class="form-group">
                    @Html.LabelFor(model => model.Banner.SliderBgImgUrl, new { @class = "card-body__title" })
                    <div class="card">
                        <div class="card-body">
                            <span class="control-label col-md-2">Upload Images:</span>
                            <div class="col-md-10">
                                @*<input type="file" name="files" id="file" class="btn btn-success" />*@
                                @Html.TextBoxFor(model => model.SliderBgImgUrl.File, new { type = "file", id = "file" })
                                @Html.ValidationMessageFor(model => model.SliderBgImgUrl.File, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="clearfix"></div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @if (Model == null)
                    {
                        <input type="submit" value="Create" class="btn btn-light" />
                    }
                    else
                    {
                        <input type="submit" value="Update" class="btn btn-light" />
                    }

                </div>
            </div>
        </div>
    }
</div>