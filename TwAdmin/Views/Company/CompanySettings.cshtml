@model TW.Models.AdminViewModel
@{
    ViewBag.Title = "CompanySettings";
}

<nav aria-label="breadcrumb" role="navigation">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="~/Home/Index">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Company Settings</li>
    </ol>
</nav>

<header class="content__title">
    <h1>Company Settings</h1>
    <div class="actions">
        <a href="~/Company/CompanySettings" class="actions__item zmdi zmdi-refresh zmdi-hc-fw" title="Refresh"></a>
    </div>
</header>


<div class="card new-contact">
    @using (Html.BeginForm("UpdateCompanySettings", "Company", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.HiddenFor(model => model.CompanySetting.Id)
        @Html.HiddenFor(model => model.CompanySetting.LogoUrl)
        //var imagepath = "http://ss.byteheart.com/" + Model.Banner.ImageUrl;
        <div class="new-contact__header">

            @*@Html.TextBoxFor(model => model.Files, new { type = "file", id = "files", @class = "fa fa-camera new-contact__upload" })*@
            <input type="file" name="file" id="files" class="zmdi zmdi-camera profile__img__edit" />

            <img src="@Model.CompanySetting.LogoUrl" class="new-contact__img" alt="">
        </div>

        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label>Company Name</label>
                        @Html.TextBoxFor(model => model.CompanySetting.CompanyName, new { @class = "form-control", placeholder = "Give a Title" })
                        @Html.ValidationMessageFor(model => model.CompanySetting.CompanyName, "", new { @class = "text-danger" })

                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group">
                        <label>Company Moto</label>
                        @Html.TextBoxFor(model => model.CompanySetting.CompanyMoto, new { @class = "form-control", placeHolder = "Write the Moto" })
                        @Html.ValidationMessageFor(model => model.CompanySetting.CompanyMoto, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group">
                        <label>Company Address</label>
                        @Html.TextBoxFor(model => model.CompanySetting.CompanyAddress, new { @class = "form-control", placeHolder = "Address" })
                        @Html.ValidationMessageFor(model => model.CompanySetting.CompanyAddress, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group">
                        <label>Main Contact Number</label>
                        @Html.TextBoxFor(model => model.CompanySetting.MainContactNo, new { @class = "form-control", placeHolder = "E.g. 01X XXXX XXXX" })
                        @Html.ValidationMessageFor(model => model.CompanySetting.MainContactNo, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group">
                        <label>Second Contact Number</label>
                        @Html.TextBoxFor(model => model.CompanySetting.ContactNo, new { @class = "form-control", placeHolder = "E.g. 01X XXXX XXXX" })
                        @Html.ValidationMessageFor(model => model.CompanySetting.ContactNo, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group">
                        <label>Primary Email</label>
                        @Html.TextBoxFor(model => model.CompanySetting.Email_1, new { @class = "form-control", placeHolder = "Primary Email Address" })
                        @Html.ValidationMessageFor(model => model.CompanySetting.Email_1, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group">
                        <label>Second Email</label>
                        @Html.TextBoxFor(model => model.CompanySetting.Email_2, new { @class = "form-control", placeHolder = "Second Email Address" })
                        @Html.ValidationMessageFor(model => model.CompanySetting.Email_2, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group">
                        <label>Google Map Location</label>&nbsp;&nbsp;<span style="font-size: 18px; color: #1AD69C"><i class="zmdi zmdi-help-outline" title="Paste the whole <iframe> link" data-toggle="tooltip" data-placement="top"></i></span>
                        @Html.TextBoxFor(model => model.CompanySetting.GMapLocation, new { @class = "form-control", placeHolder = "Google Map Location Link" })
                        @Html.ValidationMessageFor(model => model.CompanySetting.GMapLocation, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group">
                        <label>Facebook Page</label>
                        @Html.TextBoxFor(model => model.CompanySetting.FacebookPageUrl, new { @class = "form-control", placeHolder = "Facebook Page Link" })
                        @Html.ValidationMessageFor(model => model.CompanySetting.FacebookPageUrl, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group">
                        <label>Twitter Page</label>
                        @Html.TextBoxFor(model => model.CompanySetting.TwitterPageUrl, new { @class = "form-control", placeHolder = "Twitter Page Link" })
                        @Html.ValidationMessageFor(model => model.CompanySetting.TwitterPageUrl, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group">
                        <label>Youtube Channel</label>
                        @Html.TextBoxFor(model => model.CompanySetting.YoutubePageUrl, new { @class = "form-control", placeHolder = "Youtube Channel Link" })
                        @Html.ValidationMessageFor(model => model.CompanySetting.YoutubePageUrl, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group">
                        <label>LinkedIn Page</label>
                        @Html.TextBoxFor(model => model.CompanySetting.LinkedInPageUrl, new { @class = "form-control", placeHolder = "LinkedIn Link" })
                        @Html.ValidationMessageFor(model => model.CompanySetting.LinkedInPageUrl, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group">
                        <label>Google Plus</label>
                        @Html.TextBoxFor(model => model.CompanySetting.GooglePlusPageUrl, new { @class = "form-control", placeHolder = "Google Plus Link" })
                        @Html.ValidationMessageFor(model => model.CompanySetting.GooglePlusPageUrl, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group">
                        @Html.LabelFor(model => model.CompanySetting.ImgUrl, new { @class = "card-body__title" })
                        <div class="card">
                            <div class="card-body">
                                <span class="control-label col-md-2">Upload Images:</span>
                                <div class="col-md-10">
                                    @Html.TextBoxFor(model => model.OwnerImage.File, new { type = "file", id = "file" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="clearfix"></div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Update" class="btn btn-light" />
                </div>
            </div>
        </div>
    }
</div>