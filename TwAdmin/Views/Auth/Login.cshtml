@model TW.Models.User
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    @Styles.Render("~/Content/appMin")
    @Styles.Render("~/Content/iconic-font")
    @Styles.Render("~/Content/animate")

    <style>
        option {
            background-color: #6c1b20;
        }
    </style>
</head>
<body data-sa-theme="4">
    <div class="login">
        <div class="login__block active" id="l-login">
            <div class="login__block__header">
                <i class="zmdi zmdi-account-circle"></i>
                Hi there! Please Sign in

                <div class="actions actions--inverse login__block__actions" style="display:none;">
                    <div class="dropdown">
                        <i data-toggle="dropdown" class="zmdi zmdi-more-vert actions__item"></i>

                        <div class="dropdown-menu dropdown-menu-right">
                            <a class="dropdown-item" data-sa-action="login-switch" data-sa-target="#l-register" href="#">Create an account</a>
                            <a class="dropdown-item" data-sa-action="login-switch" data-sa-target="#l-forget-password" href="#">Forgot password?</a>
                        </div>
                    </div>
                </div>
            </div>
            @using (Html.BeginForm("Login", "Auth", FormMethod.Post))
            {
                <div class="login__block__body">
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control text-center", placeholder = "Your Email Address" })
                        @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.TextBoxFor(m => m.Password, new { @class = "form-control text-center", type = "password", placeholder = "Your Password" })
                        @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                    </div>
                    <input type="submit" value="Login" class="btn btn-light" />
                </div>
            }
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryvalUnobtrusive")
    @Scripts.Render("~/bundles/popper")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/appMin")
</body>
</html>
