<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="@Url.Content("~/twaicon.ico")"/>
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/iconic-font")
    @Styles.Render("~/Content/dropzone")
    @Styles.Render("~/Content/animate")
    @Styles.Render("~/Content/flatpickr")
    @Styles.Render("~/Content/scrollbar")
    @Styles.Render("~/Content/lightgallery")
    @Styles.Render("~/Content/select2")
    @Styles.Render("~/Content/sweetalert2")
    @Styles.Render("~/Content/trumbowyg")
    @Styles.Render("~/Content/appMin")
    @Styles.Render("~/Content/demo")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body data-sa-theme="4">
    <main class="main">
        <header class="header">
            <div class="navigation-trigger hidden-xl-up" data-sa-action="aside-open" data-sa-target=".sidebar">
                <i class="zmdi zmdi-menu"></i>
            </div>

            <div class="logo hidden-sm-down">
                <h1><a href="~/Home/Index">Trade World</a></h1>
            </div>

            <ul class="top-nav">
                <li class="hidden-xl-up"></li>
            </ul>

            <div class="clock">
                <div class="time">
                    <span class="time__hours"></span>
                    <span class="time__min"></span>
                    <span class="time__sec"></span>
                </div>
            </div>
        </header>

        <aside class="sidebar">
            <div class="scrollbar-inner">

                <div class="user">
                    <div class="user__info" data-toggle="dropdown">
                        <img class="user__img" src="/Content/img/avatar/ava1.png" alt="">
                        <div>
                                @if (Session["UserName"] != null && Session["Name"] != null)
                                {
                                    <div class="user__name">@Session["Name"].ToString()</div>
                                    <div class="user__email">@Session["UserName"].ToString()</div>
                                }
                                else
                                {
                                    Response.Redirect("~/Auth/Login");
                                }
                            </div>
                    </div>
                </div>

                <ul class="navigation">
                    <li><a href="/Home/Banner"><i class="zmdi zmdi-view-dashboard"></i>Banner</a></li>

                    <li><a href="/Home/About"><i class="zmdi zmdi-accounts-list"></i>About Us</a></li>

                    <li><a href="/Company/CompanySettings"><i class="zmdi zmdi-city"></i>Company Settings</a></li>

                    <li><a href="/Clients/Index"><i class="zmdi zmdi-accounts"></i>Clients</a></li>
                    <li><a href="/Home/ClientsBanner"><i class="zmdi zmdi-accounts"></i>Clients Banner</a></li>

                    <li><a href="/Machines/Index"><i class="zmdi zmdi-washing-machine"></i>Machines</a></li>

                    <li><a href="/Service/Services"><i class="zmdi zmdi-assignment-check"></i>Service</a></li>

                    <li><a href="/Projects/Index"><i class="zmdi zmdi-collection-text"></i>Project</a></li>

                    <li><a href="/Category/Categories"><i class="zmdi zmdi-collection-text"></i>Project Category</a></li>

                    <li><a href="/Feedback/Index"><i class="zmdi zmdi-thumb-up"></i>Feedback</a></li>

                    <li><a href="/Auth/Logout"><i class="zmdi zmdi-sign-in"></i>Logout</a></li>

                </ul>
            </div>
        </aside>

        <section class="content">

            @RenderBody()
            <footer class="footer hidden-xs-down">
                <p>&copy; @DateTime.Now.Year <a href="http://byteheart.com/" target="_blank">Trade World</a>. Trademarks and brands are the property of their respective owners.</p>
                <p>Made with <span style="color: red">❤️</span> By <a href="http://byteheart.com/" target="_blank">ByteHeart</a></p>
            </footer>
        </section>
    </main>

    <script src="~/Scripts/jquery-2.1.4.js"></script>
    <script src="~/Scripts/popper.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery.scrollbar.min.js"></script>
    <script src="~/Scripts/jquery-scrollLock.min.js"></script>

    <script src="~/Scripts/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/dataTables.buttons.min.js"></script>
    <script src="~/Scripts/buttons.print.min.js"></script>
    <script src="~/Scripts/buttons.html5.min.js"></script>

    <script src="~/Scripts/moment.min.js"></script>
    <script src="~/Scripts/dropzone.min.js"></script>
    <script src="~/Scripts/flatpickr.min.js"></script>
    <script src="~/Scripts/lightgallery-all.min.js"></script>
    <script src="~/Scripts/select2.full.min.js"></script>
    <script src="~/Scripts/sweetalert2.min.js"></script>
    <script src="~/Scripts/trumbowyg.min.js"></script>

    <script src="~/Scripts/CustomJs/app.min.js"></script>
    <script src="~/Scripts/CustomJs/demo.js"></script>

    @RenderSection("scripts", required: false)
    <script>
        $('#sa-question').click(function () {
            swal({
                title: 'Confirm',
                text: 'Are you sure to delete this message?',
                type: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Yes, sir',
                cancelButtonText: 'Not at all',
                background: 'rgba(0, 0, 0, 0.96)'
            })
        });

        $('#wysiwyg-editor').trumbowyg();

        $(function () {
            // this will get the full URL at the address bar
            var url = window.location.href;
            // passes on every "a" tag 
            $(".navigation a").each(function () {
                // checks if its the same on the address bar
                if (url == (this.href)) {
                    $(this).closest("li").addClass("navigation__active");
                }
            });
        });
    </script>
</body>
</html>
