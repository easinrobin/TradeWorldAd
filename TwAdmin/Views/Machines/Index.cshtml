@model TW.Models.AdminViewModel
@{
                /**/

                ViewBag.Title = "Index";
}


<header class="content__title">
    <h1>Machine List</h1>
    <div class="actions">
        <a href="~/Machines/InsertMachines" class="actions__item zmdi zmdi-plus zmdi-hc-fw" title="Create"></a>
        <a href="~/Machines/Index" class="actions__item zmdi zmdi-refresh zmdi-hc-fw" title="Refresh"></a>
    </div>
</header>

<div class="card">
    <div class="card-body">
        <a href="~/Machines/InsertMachines" class="btn btn-light btn--icon-text" title="Create"><i class="zmdi  zmdi-plus-circle-o zmdi-hc-fw"></i> Create New</a>

        <div class="table-responsive">
            <table id="data-table" class="table">
                <thead style="color: #ffaa00">
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Image</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.MachineList)
                    {
                        <tr>
                            <td>@Html.Raw(@item.MachineName)</td>
                            <td>@Html.Raw(@item.Description)</td>
                            <td>
                                <img src="@item.ImageUrl" width="100" height="100" />
                            </td>
                            <td>
                                @Html.ActionLink(" ", "UpdateMachine", new { Id = item.Id }, new { @class = "zmdi zmdi-edit", title = "Edit Item", data_toggle = "tooltip", data_placement = "top" })&nbsp;&nbsp;
                                @Html.ActionLink(" ", "DeleteMachine", new { Id = item.Id }, new { @class = "zmdi zmdi-delete", title = "Delete Item", data_toggle = "tooltip", data_placement = "top", onclick = "return confirm('Are you sure you want to delete this item?')" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>